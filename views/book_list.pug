extends layout

block content
  h1= title
  
  ul
    each book in book_list
      li 
        a(href=book.url) #{book.title} 
        |  (#{book.author.name})
        //- will not output within markup
        //- each book is defined as two lines, using the pipe for the second line
        //- because if the author name were on the previous line then it would be part of the hyperlink text comment.

    else
      li There are no books.